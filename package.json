{
  "name": "hexbusters",
  "version": "1.0.0",
  "description": "HEXBUSTERS - a simple board game with React and Flux.",
  "repository": {
    "type": "git",
    "url": "https://github.com/euoia/hexbusters"
  },
  "main": "index.html",
  "scripts": {
    "start": "node server.js",
