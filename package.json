    "babel-preset-react": "^6.5.0",
    "babel-register": "^6.7.2",
    "check-types": "^3.3.1",
    "hex-grid": "https://github.com/euoia/hex-grid#2.0-dev",
    "immutable": "^3.7.5",
    "lodash": "^4.6.1",
    "react": "^0.14.7",
    "react-dom": "^0.14.7",
    "react-redux": "^4.4.1",
    "redux": "^3.3.1",
